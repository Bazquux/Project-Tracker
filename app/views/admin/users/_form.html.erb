<%= semantic_form_for [:admin, @user] do |f| %>
  
  <%= f.inputs do %>
  	<%= f.input :username %>
  	<%= f.input :email, :as => :email %>
  	<%= f.input :password %>
  <% end %>
  <%= f.check_box :admin %>
  
  <%= f.label :admin, "Is an admin?" %><br />
  
  <%= f.submit "Sign up" %>
  
<% end %>
