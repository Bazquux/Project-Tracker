<%= form_for [@project, @ticket], :html => { :multipart => true } do |f| %>
	<%= f.error_messages %>
	<div>
		<%= f.label :name %><br />
		<%= f.text_field :name %><br />
	</div>
	<div>
		<%= f.label :body %><br />
		<%= f.text_area :body %><br />
	</div>
	<div>
		<%= render 'shared/tags' %>
	</div>

	<% number = 0 %>
	<%= f.fields_for :assets do |asset| %>
		<p>
			<%= asset.label :asset, "File ##{number += 1}" %>
			<%= asset.file_field :asset %>
		</p>
	<% end %>

	<%= f.submit %>
<% end %>